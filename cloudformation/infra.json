{
  "Parameters": {
    "environment": {
      "AllowedPattern": "^[a-z0-9]+$",
      "Description": "Name of the environment in lower-case (e.g. 'tomy', 'ci', 'aslive' or 'production' - /^[a-z0-9]+$/).",
      "Type": "String"
    },
    "keyName": {
      "Description": "SSH key name for accessing the instances.",
      "Type": "AWS::EC2::KeyPair::KeyName"
    },
    "vpc": {
      "Description": "The id of the VPC that this should be launched into (/^vpc-[0-9a-f]+$/).",
      "Type": "AWS::EC2::VPC::Id"
    },
    "controllerInstanceType": {
      "AllowedPattern": "^[a-z0-9]+\\.[a-z0-9]+$",
      "Description": "The EC2 instance type e.g. m3.medium (/^[a-z0-9]+\\.[a-z0-9]+$/).",
      "Default": "m3.large",
      "Type": "String"
    },
    "dockerInstanceType": {
      "AllowedPattern": "^[a-z0-9]+\\.[a-z0-9]+$",
      "Description": "The EC2 instance type e.g. m3.medium (/^[a-z0-9]+\\.[a-z0-9]+$/).",
      "Default": "m3.large",
      "Type": "String"
    },
    "ImageId": {
      "Description": "AMI id. This will be used for controller and docker boxes",
      "Type": "String",
      "Default": "ami-5d721f2a"
    }
  },
  "Mappings": {
    "InstanceMappings": {
      "controller": {
        "maxInstances": "1",
        "minInstances": "1",
        "subnets": ["subnet-72852a05"]
      },
      "dockerhosts": {
        "maxInstances": "3",
        "minInstances": "3",
        "subnets": ["subnet-72852a05","subnet-1e428247","subnet-5980063c"]
      }
    },
    "CustomVariables": {
      "deployUserScript": { "Value": "useradd -G docker -s /bin/bash -m deploy; su - deploy -c \"mkdir -p .ssh; echo \"\"ssh-rsa \"\" > .ssh/authorized_keys ; chmod 0700 .ssh; chmod 0600 .ssh/authorized_keys\"" }
    }
  },
  "Resources": {
    "PAASNotifications":{
        "Type":"AWS::SNS::Topic",
        "Properties":{
          "Subscription":[ 
            {
              "Endpoint":{"Fn::GetAtt":["ControllerQueue","Arn"]},
              "Protocol":"sqs"
            }
          ]
        } 
    },
    "ControllerQueue":{
      "Type":"AWS::SQS::Queue"
    },
    "ControllerASG": {
      "Properties": {
        "AvailabilityZones": [
          {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "AWS::Region"
                },
                "a"
              ]
            ]
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "ControllerLaunchConfig"
        },
        "LoadBalancerNames": [
          {
            "Ref": "ELB"
          }
        ],
        "MaxSize": {
          "Fn::FindInMap": [ "InstanceMappings", "controller", "maxInstances"  ]
        },
        "MinSize": {
          "Fn::FindInMap": [ "InstanceMappings", "controller", "minInstances"  ]
        },
        "Tags": [
          {
            "Key": "Name",
            "PropagateAtLaunch": true,
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS-controller"
                ]
              ]
            }
          }
        ],
        "VPCZoneIdentifier": {
          "Fn::FindInMap": [ "InstanceMappings", "controller", "subnets"]
        }
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    },

    "DockerASG": {
      "Properties": {
        "AvailabilityZones": [
          {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "AWS::Region"
                },
                "a"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "AWS::Region"
                },
                "b"
              ]
            ]
          },
          {
            "Fn::Join": [
              "",
              [
                {
                  "Ref": "AWS::Region"
                },
                "c"
              ]
            ]
          }
        ],
        "LaunchConfigurationName": {
          "Ref": "DockerhostsLaunchConfig"
        },
        "MaxSize": {
          "Fn::FindInMap": [ "InstanceMappings", "dockerhosts", "maxInstances" ]
        },
        "MinSize": {
          "Fn::FindInMap": [ "InstanceMappings", "dockerhosts", "minInstances" ]
        },
        "NotificationConfigurations" : [
          {
            "TopicARN" : { "Ref" : "PAASNotifications" },
            "NotificationTypes" : [
              "autoscaling:EC2_INSTANCE_LAUNCH",
              "autoscaling:EC2_INSTANCE_LAUNCH_ERROR",
              "autoscaling:EC2_INSTANCE_TERMINATE",
              "autoscaling:EC2_INSTANCE_TERMINATE_ERROR"
            ]
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "PropagateAtLaunch": true,
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS-dockerhosts"
                ]
              ]
            }
          }
        ],
        "VPCZoneIdentifier": {
          "Fn::FindInMap": [ "InstanceMappings", "dockerhosts", "subnets" ]
        }
      },
      "Type": "AWS::AutoScaling::AutoScalingGroup"
    },
    "ELB": {
      "Properties": {
        "ConnectionDrainingPolicy": {
          "Enabled": true,
          "Timeout": 10
        },
        "CrossZone": "true",
        "HealthCheck": {
          "HealthyThreshold": 2,
          "Interval": 5,
          "Target": "TCP:80",
          "Timeout": 4,
          "UnhealthyThreshold": 2
        },
        "Listeners": [
          {
            "InstancePort": "80",
            "InstanceProtocol": "HTTP",
            "LoadBalancerPort": "80",
            "Protocol": "HTTP"
          }
        ],
        "SecurityGroups": [
          {
            "Ref": "ELBSecurityGroup"
          }
        ],
        "Subnets": {
          "Fn::FindInMap": [ "InstanceMappings", "controller", "subnets" ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS Controller load balancer"
                ]
              ]
            }
          }
        ]
      },
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer"
    },
    "ELBSecurityGroup": {
      "Properties": {
        "GroupDescription": "Security group to identify traffic from the load balancer",
        "SecurityGroupIngress": [
          {
            "CidrIp": "10.169.0.0/21",
            "FromPort": "80",
            "IpProtocol": "tcp",
            "ToPort": "80"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS",
                  "load balancer security group"
                ]
              ]
            }
          }
        ],
        "VpcId": {
          "Ref": "vpc"
        }
      },
      "Type": "AWS::EC2::SecurityGroup"
    },
    "InstanceProfile": {
      "Properties": {
        "Path": "/",
        "Roles": [
          {
            "Ref": "Role"
          }
        ]
      },
      "Type": "AWS::IAM::InstanceProfile"
    },

    "ControllerSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "VpcId": {
          "Ref": "vpc"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS controller",
                  "security group"
                ]
              ]
            }
          }
        ],
        "GroupDescription": "Security group to protect the EC2 instances",
        "SecurityGroupIngress": [
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "22",
            "IpProtocol": "tcp",
            "ToPort": "22"
          },
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "5672",
            "IpProtocol": "tcp",
            "ToPort": "5672"
          },
          {
            "FromPort": "6379",
            "ToPort": "6379",
            "IpProtocol": "tcp",
            "CidrIp": "10.0.0.0/8"
          },
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "8000",
            "IpProtocol": "tcp",
            "ToPort": "8000"
          },
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "9000",
            "IpProtocol": "tcp",
            "ToPort": "9000"
          },

          {
            "FromPort": "80",
            "IpProtocol": "tcp",
            "SourceSecurityGroupId": {
              "Ref": "ELBSecurityGroup"
            },
            "ToPort": "80"
          }
        ]
      }
    },

    "DockerHostsSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Security group to protect the EC2 instances",
        "VpcId": {
          "Ref": "vpc"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                " ",
                [
                  {
                    "Ref": "environment"
                  },
                  "PaaS Docker",
                  "security group"
                ]
              ]
            }
          }
        ],
        "SecurityGroupIngress": [
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "22",
            "IpProtocol": "tcp",
            "ToPort": "22"
          },
          {
            "CidrIp": "10.0.0.0/8",
            "FromPort": "4243",
            "IpProtocol": "tcp",
            "ToPort": "4243"
          },
          {
            "FromPort": "0",
            "ToPort": "65535",
            "IpProtocol": "tcp",
            "SourceSecurityGroupId": {
              "Ref": "ControllerSecurityGroup"
            }
          }
        ]
      }
    },
    "DockerHostsSecurityGroupIngress": {
      "Type" : "AWS::EC2::SecurityGroupIngress",
      "Properties": {
        "GroupId": { "Ref": "DockerHostsSecurityGroup" },
        "IpProtocol": "tcp",
        "FromPort": "0",
        "ToPort": "65535",
        "SourceSecurityGroupId": { "Ref": "DockerHostsSecurityGroup" }
      },
      "DependsOn": "DockerHostsSecurityGroup"
    },

    "ControllerLaunchConfig": {
      "Properties": {
        "AssociatePublicIpAddress": "false",
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "InstanceType": {
          "Ref": "controllerInstanceType"
        },
        "KeyName": {
          "Ref": "keyName"
        },
        "SecurityGroups": [
          {
            "Ref": "ControllerSecurityGroup"
          }
        ],
        "UserData": { "Fn::Base64" : { "Fn::Join" : ["", [
          "#!/bin/bash\n",
          "/usr/local/bin/attach_ebs.py $(ec2metadata --instance-id) ", { "Ref": "RedisEBS" } , "\n",
          "pip install cli53\n",
          "cli53 rrcreate mergermarket.it controller.", { "Ref": "environment"} ," A $(ec2metadata --local-ipv4) --replace --ttl 60\n",
          {
            "Fn::FindInMap": [ "CustomVariables", "deployUserScript", "Value" ]

          }
        ]] }}
      },
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "DependsOn": "RedisEBS"

    },
    "DockerhostsLaunchConfig": {
      "Properties": {
        "AssociatePublicIpAddress": "false",
        "IamInstanceProfile": {
          "Ref": "InstanceProfile"
        },
        "ImageId": {
          "Ref": "ImageId"
        },
        "InstanceType": {
          "Ref": "dockerInstanceType"
        },
        "KeyName": {
          "Ref": "keyName"
        },
        "SecurityGroups": [
          {
            "Ref": "DockerHostsSecurityGroup"
          }
        ],
        "UserData": {"Fn::Base64": {"Fn::Join": ["", [
          "#!/bin/bash\n",
          {
            "Fn::FindInMap": ["CustomVariables", "deployUserScript", "Value"]
          },
          "\n",
          "service docker stop; umount -f /mnt; mkfs.ext4 /dev/xvdb; mount -t ext4 /dev/xvdb /var/lib/docker && service docker start\n",
          "python /usr/local/bin/docker-redis.py ", { "Ref": "environment" }, " self"
        ]]}}

      },
      "Type": "AWS::AutoScaling::LaunchConfiguration"
    },
    "Role": {
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Statement": [
            {
              "Action": [
                "sts:AssumeRole"
              ],
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com"
                ]
              }
            }
          ],
          "Version": "2012-10-17"
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Statement": [
                {
                  "Action": "elasticloadbalancing:DescribeInstanceHealth",
                  "Effect": "Allow",
                  "Resource": "*"
                },
                {
                  "Action": [
                    "ec2:AttachVolume",
                    "ec2:DescribeVolumes",
                    "ec2:DescribeVolumeStatus"
                  ],
                  "Effect": "Allow",
                  "Resource": "*"
                },
		{
                  "Effect":"Allow",
 	          "Action":[
                    "sqs:DeleteMessage",
                    "sqs:ReceiveMessage"
                  ],
                  "Resource":[
                    {"Fn::GetAtt":["ControllerQueue","Arn"]}
                  ] 
		},
                {
                  "Effect": "Allow",
                  "Resource": "*",
                  "Action": [
                    "ec2:DescribeInstances"
                  ]
                },
                {
                  "Action": [
                    "route53:ChangeResourceRecordSets",
                    "route53:GetHostedZone",
                    "route53:ListResourceRecordSets"
                  ],
                  "Effect": "Allow",
                  "Resource": "arn:aws:route53:::hostedzone/Z3OTMN2JUY5IS5"
                },
                {
                  "Action": [
                    "route53:GetChange"
                  ],
                  "Resource": "arn:aws:route53:::change/*",
                  "Effect": "Allow"
                },
                {
                  "Action": [
                    "route53:ListHostedZones"
                  ],
                  "Resource": "*",
                  "Effect": "Allow"
                }
              ],
              "Version": "2012-10-17"
            },
            "PolicyName": "Policy"
          }
        ]
      },
      "Type": "AWS::IAM::Role"
    },
    "RedisEBS": {
      "Type" : "AWS::EC2::Volume",
      "Properties" : {
        "Size" : "10",
        "VolumeType" : "standard",
        "AvailabilityZone" : "eu-west-1a"
      }
    }
  }
}
